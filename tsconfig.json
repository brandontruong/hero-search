{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "allowJs": true,
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true
    },
    "exclude": [
        "./node_modules/**/*"
      ],
    "include": [
        "./src/**/*"
    ]
}